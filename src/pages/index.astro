---
import LinkedInIcon from "../icons/LinkedInIcon.astro";
import Layout from "../layouts/Layout.astro";
import SocialPills from "../components/SocialPills.astro";
import GitHubIcon from "../icons/GitHubIcon.astro";
import TwitterIcon from "../icons/Twitter.astro";
import MailIcon from "../icons/Mail.astro";
import SectionContainer from "../components/SectionContainer.astro";
---

<Layout
  title="Portfolio Oscar Fuentes - Web Developer Programer"
  description="Oscar's portfolio, see what I am capable of doing for you and your company, open to helping you with your projects"
>
  <main>
    <SectionContainer class="py-44 pb-22">
      <!-- Hero Section -->
      <div class="flex flex-row justify-between gap-4">
        <!-- TODO: Change Photo Maybe -->
        <img
          class="h-32 rounded-full"
          src="../../public/OscarPhoto.jpeg"
          alt="oscar's photo comic"
        />
        <div class="flex flex-col gap-4">
          <!-- TODO: Implement the Header Sticky and remove Photo -->
          <h1 class="text-5xl font-bold flex justify-left flex-row opacity-85">
            Hi, I am Oscar Fuentes
          </h1>
          <h2 class="text-lg opacity-80 text-wrap">
            Passionate about programming,
            <span class="text-blue-100/90">Web Developer</span>, always seeking
            to learn what's new or more optimal. Unveiling the mysteries of the
            BackEnd.
          </h2>
        </div>
      </div>

      <ul class="flex flex-row justify-center gap-x-6 mt-8">
        <li>
          <SocialPills
            href="https://www.linkedin.com/in/oscar-fuentes-esteves-454652267/"
          >
            <LinkedInIcon class="size-6" />
            LinkedIn
          </SocialPills>
        </li>
        <li>
          <SocialPills href="https://github.com/nosoyeseoscar">
            <GitHubIcon class="size-6" />
            GitHub
          </SocialPills>
        </li>
        <li>
          <SocialPills href="https://twitter.com/nosoyeseoscar">
            <TwitterIcon class="size-6" />
            X/Twitter
          </SocialPills>
        </li>
        <li>
          <!-- TODO: Maybe Change -->
          <SocialPills href="">
            <MailIcon class="size-6" />
            ofuentese@gmail.com
          </SocialPills>
        </li>
      </ul>
    </SectionContainer>
    <SectionContainer>
      <!-- Projects Section -->
    </SectionContainer>
  </main>
</Layout>
