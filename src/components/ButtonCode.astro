---
import IconLink from "../icons/Link.astro";
import GitHubIcon from "../icons/GitHub.astro";

const { type, href } = Astro.props;
---

<a
  class="group rounded-md dark:border dark:border-white/10 border-slate-900/10 dark:bg-white/5 bg-white/80 flex justify-center items-center gap-x-3 py-2 px-4 text-lg
   transition"
  href={href}
  target="_blank"
  rel="noopener noreferrer"
>
  {type == "code" && <span>Code</span>}
  {type == "live" && <span>Live</span>}
  {
    type == "code" && (
      <GitHubIcon class="size-6 group-hover:scale-110 transition-transform duration-300" />
    )
  }
  {
    type == "live" && (
      <IconLink class="group-hover:rotate-45 transition-transform duration-300" />
    )
  }
</a>
