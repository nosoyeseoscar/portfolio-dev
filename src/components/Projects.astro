const PROJECTS = [
  {
    title: "Project 1",
    description:
      "Lorem, ipsum dolor sit amet consectetur adipisicing elit. Reiciendis ipsum provident numquam omnis fuga saepe rem earum deserunt iure veniam assumenda similique quis alias quisquam tempora obcaecati, totam possimus repellat!",
    link: "#",
    github: "#",
    image: "https://via.placeholder.com/300x200",
    tags: ["HTML", "CSS", "JavaScript"],
  },
];
---

{
  PROJECTS.map(({ image, title, description, tags }) => {
    <article>
      <h3>{title}</h3>
      <p>{description}</p>
